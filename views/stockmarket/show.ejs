                    <button>지우기</button>
                </form> -->
        
                <a href="/stock">홈으로</a>
                <!-- <a href="/stock/<%= data._id %>/edit">수정하기</a> -->
            </section> 
    
            <section class="detailContainer hidden">
                <div class="dePrice">
                    24시간 기준 오프닝 가격
                    <span class="openingPrice"></span>
                </div>
                <div class="dePrice">
                    24시간 기준 최저 가격
                    <span class="lowPrice"></span>
                </div>
                <div class="dePrice">
                    24시간 기준 최고 가격
                    <span class="highPrice"></span>
                </div>
                <div class="dePrice">
                    현재 변동폭
                    <span class="changePrice"></span>
                </div>
                <div class="dePrice">
                    그래서 24시간 기준 올라가 내려가?
                    <span class="riseOrSink"></span>
                </div>
            </section>    
        </section>
        
    </section>


    <script src="/JS/show.js"></script>
</body>
</html>